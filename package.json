{
  "name": "scroll-trigger-mono",
  "private": true,
  "scripts": {
    "dev:docs": "turbo run dev --filter=docs",
    "dev:portfolio": "turbo run dev --filter=portfolio",
    "dev:chat": "turbo run dev --filter=chat-widget",
    "build": "turbo run build",
    "build:docs": "turbo run build --filter=docs",
    "build:portfolio": "turbo run build --filter=portfolio",
    "build:chat": "turbo run build --filter=chat-widget",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.7.4",
    "turbo": "^2.7.0",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=18"
  },
  "pnpm": {
    "overrides": {
      "@types/react": "^18",
      "@types/react-dom": "^18"
    },
    "onlyBuiltDependencies": [
      "@nestjs/core",
      "@parcel/watcher",
      "@prisma/client",
      "@prisma/engines",
      "@scarf/scarf",
      "@swc/core",
      "core-js",
      "esbuild",
      "prisma",
      "sharp",
      "unrs-resolver"
    ]
  }
}
